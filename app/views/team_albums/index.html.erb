<p id="notice"><%= notice %></p>

<h1>Listing Team Albums</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Name</th>
      <th>Desc</th>
      <th>Area</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team_albums.each do |team_album| %>
      <tr>
        <td><%= team_album.team %></td>
        <td><%= team_album.name %></td>
        <td><%= team_album.desc %></td>
        <td><%= team_album.area %></td>
        <td><%= link_to 'Show', team_album %></td>
        <td><%= link_to 'Edit', edit_team_team_album_path(@team, team_album) %></td>
        <td><%= link_to 'Destroy', team_album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

